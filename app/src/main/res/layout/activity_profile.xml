<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/noiseDetect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect Noise" />

        <Button
            android:id="@+id/activity_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect Activity" />

        <Button
            android:id="@+id/test_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Event" />

        <Button
            android:id="@+id/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Locations" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="130dp"
            android:src="@drawable/common_google_signin_btn_icon_light_normal_background"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Profile"
            android:textColor="#000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/preferences"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@drawable/blue"
            android:text="Preferences"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="196dp" />
        <Button
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@drawable/blue"
            android:text="My Calendar"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="196dp" />

        <Button
            android:id="@+id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@drawable/blue"
            android:text="Dashboard"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="196dp" />

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="91dp"
            app:srcCompat="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="196dp" />

        <Button
            android:id="@+id/resource"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@drawable/blue"
            android:text="Resources"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="196dp" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            app:srcCompat="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="196dp" />


    </LinearLayout>
</ScrollView>